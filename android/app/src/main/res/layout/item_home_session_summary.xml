<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="session"
            type="kr.valor.juggernaut.domain.session.model.Session" />

        <variable
            name="navigateAction"
            type="kr.valor.juggernaut.ui.home.NavigateClickListener" />
    </data>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="@dimen/item_session_summary_width"
        android:layout_height="@dimen/item_session_summary_height"
        android:layout_marginVertical="@dimen/margin_dp_default"
        android:layout_marginHorizontal="@dimen/recyclerview_item_margin_horizontal_default"
        android:onClick="@{() -> navigateAction.onClick(session.sessionId)}"
        app:sessionClickable="@{session}">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="@dimen/item_session_summary_width"
            android:layout_height="@dimen/item_session_summary_height">

            <TextView
                android:id="@+id/lift_category_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{String.valueOf(session.category)}"
                app:layout_constraintStart_toStartOf="@id/start_guideline"
                app:layout_constraintTop_toTopOf="@id/top_guideline"
                tools:text="Bench press" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{String.valueOf(session.isCompleted)}"
                app:layout_constraintEnd_toEndOf="@id/end_guideline"
                app:layout_constraintBottom_toBottomOf="@id/bottom_guideline" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/start_guideline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_begin="@dimen/guideline_margin_dp_default" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/end_guideline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_end="@dimen/guideline_margin_dp_default" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/top_guideline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_begin="@dimen/guideline_margin_dp_default" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/bottom_guideline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_end="@dimen/guideline_margin_dp_default" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>
</layout>