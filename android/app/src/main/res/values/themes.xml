<?xml version="1.0" encoding="utf-8"?>
<!-- Light Mode -->
<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.App.Launcher" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowBackground">@drawable/launcher_splash_background</item>
        <item name="android:statusBarColor">@color/color_surface_variant</item>
        <item name="android:navigationBarColor">@color/color_surface_variant</item>
    </style>

    <style name="Theme.App.Onboarding" parent="Theme.Main">
        <item name="android:statusBarColor">@color/color_surface_variant</item>
        <item name="android:windowBackground">@color/color_surface_variant</item>
    </style>

    <style name="Theme.Main" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Light Mode -->
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryVariant">@color/color_primary_dark</item>
        <item name="colorSecondary">?attr/colorPrimary</item>
        <item name="colorOnPrimary">?attr/colorOnSecondary</item>
        <item name="colorOnSecondary">@color/color_on_secondary</item>

        <!-- Customize -->
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:fontFamily">@font/open_sans_semibold</item>
        <item name="fontFamily">@font/open_sans_semibold</item>

        <item name="materialCardViewStyle">@style/Widget.App.CardView</item>
        <item name="snackbarButtonStyle">@style/Widget.App.SnackbarButton</item>
    </style>

    <style name="Widget.App.Button.SharpButton" parent="Widget.MaterialComponents.Button">
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:textSize" tools:ignore="SpUsage">16dp</item>
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.Button.SharpButton</item>
        <item name="shapeAppearance">@style/ShapeAppearance.App.SharpButton</item>
    </style>

    <style name="ThemeOverlay.App.Button.SharpButton" parent="">
        <item name="colorPrimary">?attr/colorPrimaryVariant</item>
        <item name="colorOnPrimary">@color/color_on_primary_variant</item>
    </style>

    <style name="Widget.App.Toolbar" parent="Widget.MaterialComponents.Toolbar.Primary">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.Toolbar</item>
    </style>

    <style name="ThemeOverlay.App.Toolbar" parent="">
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/color_primary</item>
    </style>

    <style name="Widget.App.CardView" parent="Widget.MaterialComponents.CardView">
        <item name="shapeAppearance">@style/ShapeAppearance.App.MediumComponent</item>
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.Card</item>
    </style>

    <style name="ThemeOverlay.App.Card" parent="">
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorSurface">#F8F8FA</item>
        <item name="colorOnSurface">@color/color_primary</item>
    </style>

    <style name="Widget.App.SnackbarButton" parent="Widget.MaterialComponents.Button.TextButton.Snackbar">
        <item name="android:textColor">?attr/colorSurface</item>
    </style>

    <style name="TextAppearance.App.Headline1" parent="TextAppearance.MaterialComponents.Headline3">
        <item name="android:textSize" tools:ignore="SpUsage">48dp</item>
        <item name="android:textColor">@color/color_primary_dark</item>
    </style>

    <style name="TextAppearance.App.Headline2" parent="TextAppearance.MaterialComponents.Headline3">
        <item name="android:textSize" tools:ignore="SpUsage">34dp</item>
        <item name="android:textColor">@color/color_primary_dark</item>
    </style>

    <style name="TextAppearance.App.Headline3" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="android:textSize" tools:ignore="SpUsage">24dp</item>
        <item name="android:textColor">@color/color_primary_dark</item>
    </style>

    <style name="TextAppearance.App.Title" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textSize" tools:ignore="SpUsage">20dp</item>
        <item name="android:textColor">@color/color_primary</item>
    </style>

    <style name="TextAppearance.App.SubTitle" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="android:textSize" tools:ignore="SpUsage">16dp</item>
        <item name="android:textColor">@color/color_primary</item>
    </style>

    <style name="TextAppearance.App.Content" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textSize" tools:ignore="SpUsage">16dp</item>
        <item name="android:textColor">@color/color_primary</item>
    </style>
</resources>